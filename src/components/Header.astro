---
const pathname = new URL(Astro.request.url).pathname;
/*const navUrl = pathname.slice(1);*/ // remove the first "/"
---

<section
    class="bg-transparent text-white mx-auto pt-8 w-full top-0 z-50"
    transition:animate="none"
>
    <!-- <p class="text-center">{pathname}</p> -->
    <nav
        class="flex items-center justify-center py-4 sm:py-4 mx-auto max-w-4xl antialiased"
    >
        <div class="text-xs sm:text-lg font-bold sm:font-semibold">
            <a
                href="/"
                class={pathname === "/"
                    ? "current max-sm:font-normal bg-red-900 text-orange-300 border-b-2 border-orange-300 py-1 rounded-lg sm:py-1 hover:text-orange-300 px-1"
                    : "max-sm:font-normal py-1 rounded-lg sm:py-1 hover:text-orange-300 px-1"}
                data-astro-prefetch="viewport">HEM</a
            >
            ·
            <a
                href="/om-oss"
                class={pathname === "/om-oss"
                    ? "current max-sm:font-normal bg-red-900 text-orange-300 border-b-2 border-orange-300 py-1 rounded-lg sm:py-1 hover:text-orange-300 px-1"
                    : "max-sm:font-normal py-1 rounded-lg sm:py-1 hover:text-orange-300 px-1"}
                data-astro-prefetch="viewport">BANDET</a
            >
            ·
            <a
                href="/spelningar"
                class={pathname === "/spelningar"
                    ? "current max-sm:font-normal bg-red-900 text-orange-300 border-b-2 border-orange-300 py-1 rounded-lg sm:py-1 hover:text-orange-300 px-1"
                    : "max-sm:font-normal py-1 rounded-lg sm:py-1 hover:text-orange-300 px-1"}
                data-astro-prefetch="viewport">SPELNINGAR</a
            >
            ·
            <a
                href="/kontakt"
                class={pathname === "/kontakt"
                    ? "current max-sm:font-normal bg-red-900 text-orange-300 border-b-2 border-orange-300 py-1 rounded-lg sm:py-1 hover:text-orange-300 px-1"
                    : "max-sm:font-normal py-1 rounded-lg sm:py-1 hover:text-orange-300 px-1"}
                data-astro-prefetch="viewport">KONTAKT</a
            >
        </div>
    </nav>
</section>
